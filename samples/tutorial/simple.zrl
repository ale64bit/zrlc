module simple

pipeline Pipeline(): fvec4 {

  def vertex(pos: fvec4, col: fvec4): fvec4 {
    builtin.position = fvec4(pos.x, pos.y, pos.z, 1.0)
    return col
  }

  def fragment(col: fvec4): fvec4 {
    return fvec4(col.x, col.y, col.z, 1.0)
  }
}

renderer Simple() {

  def main(geometry: atomlist) {
    builtin.screen = fvec4(1.0, 1.0, 1.0, 1.0) 
    for g in geometry {
      builtin.screen += Pipeline(pos = g, col = g)
    }
  }
}

