module simple

pipeline Forward(): fvec4 {

  def vertex(pos, col: fvec3): fvec3 {
    builtin.position = fvec4(pos.x, pos.y, pos.z, 1.0)
    return col
  }

  def fragment(col: fvec3): fvec4 {
    return fvec4(col.x, col.y, col.z, 1.0)
  }
}

renderer Simple() {

  def main(geometry: atomlist) {
    builtin.screen = fvec4(0.0, 0.0, 0.0, 1.0) 
    for g in geometry {
      builtin.screen += Forward(pos = g)
    }
  }
}

